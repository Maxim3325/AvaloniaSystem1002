<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaSystem1002.Pages.AutchPages">
  <Grid ColumnDefinitions="*, *, *" RowDefinitions="50, 90, 20, 100">
    <Label Content="Авторизация" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="1"/>
    <TextBox Name="LoginTb" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="1" Height="30" Width="100"/>
<Label Name="Login" Content="Логин:" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1" Height="30" Width="100"/>
    <TextBox Name="PasswordTb" PasswordChar="*" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="2" Height="30" Width="100"/>
    <Label Name="Password" Content="Пароль:" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="2" Height="30" Width="100"/>
    
    <Button Name="AutchBtn" Content="Авторизоваться" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="3" Height="30" Width="130"/>
    <Button Name="PasswordBtn" Content="скрыть пароль" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="3" Height="30" Width="130"/>
  </Grid>
</UserControl>
