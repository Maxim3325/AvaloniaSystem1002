<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaSystem1002.Pages.StartPage">
  <StackPanel VerticalAlignment="Center">
    <Label Content="Главное меню" HorizontalAlignment="Center"/>
    <Button Name="CurseBtn" Content="Доступные курсы" Grid.Row="1" HorizontalAlignment="Center" 
            Height="30" Width="150" HorizontalContentAlignment="Center" Margin="5"/>
    <Button Name="DatabaseBtn" Content="Настройка Б/Д" Grid.Row="2" HorizontalAlignment="Center" 
            Height="30" Width="150" HorizontalContentAlignment="Center" Margin="5"/>
    <Button Name="AutchBtn" Content="Авторизация" Grid.Row="3" HorizontalAlignment="Center" 
            Height="30" Width="150" HorizontalContentAlignment="Center" Margin="5"/>
  </StackPanel>
</UserControl>
